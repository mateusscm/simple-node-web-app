{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "esModuleInterop": true,
    "outDir": "./build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "transpileOnly": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "./jest.config.ts",
    "./node_modules",
    "./build",
    "./tests",
    "./coverage",
    "**/*.js"
  ]
}
